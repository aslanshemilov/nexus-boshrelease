#!/bin/bash

set -e

BOSH_DATA_DIRECTORY=${BOSH_DATA_DIRECTORY:-/var/vcap/store}
BACKUP_DIRECTORY="$BBR_ARTIFACT_DIRECTORY"/sonatype-work
BLOBS_DIRECTORY="$BOSH_DATA_DIRECTORY"/sonatype-work

rm -rf ${BLOBS_DIRECTORY}
cp -r ${BACKUP_DIRECTORY} ${BOSH_DATA_DIRECTORY}

chown -R vcap:vcap ${BLOBS_DIRECTORY}